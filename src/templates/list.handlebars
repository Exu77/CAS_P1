{{#each notes}}
<table id="{{id}}" class="list-entry-tab">
        <tr>
            <td class="col1">
                <div>{{fromNow targetDate}}</div>
            </td>
            <td class="col2">
                <div class="title-importance">
                    <div>{{title}}</div>
                    <div class="importance">
                        <i class="fa fa-bolt bolt {{getBoltClass importance 0}}"></i>
                        <i class="fa fa-bolt bolt {{getBoltClass importance 1}}"></i>
                        <i class="fa fa-bolt bolt {{getBoltClass importance 2}}"></i>
                        <i class="fa fa-bolt bolt {{getBoltClass importance 3}}"></i>
                        <i class="fa fa-bolt bolt {{getBoltClass importance 4}}"></i>
                    </div>
                </div>
            </td>
            <td  class="col3" rowspan="2">
                <button>Bearbeiten</button>
            </td>
        </tr>
        <tr class="col1">
            <td>
                <div>
                    <input id="finCheck" onchange="setFinished({{id}})" type="checkbox" {{#if done}}checked{{/if}}>
                    <div>Abgeschlossen</div>
                    {{#if done}}
                        <div class="finish-date">[{{fromNow finishDate}}]</div>
                    {{/if}}
                </div>
            </td>
            <td class="col2">
                <textarea>{{content}}</textarea>
            </td>
        </tr>
</table>
{{/each}}

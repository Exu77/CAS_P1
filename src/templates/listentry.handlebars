<table id="{{id}}" class="list-entry-tab">
        <tr>
            <td class="col1">
                <div>{{targetDate}}</div>
            </td>
            <td class="col2">
                <div class="title-importance">
                    <div>{{title}}</div>
                    <div class="importance">
                        <i class="fa fa-bolt bolt"></i>
                        <i class="fa fa-bolt bolt"></i>
                        <i class="fa fa-bolt bolt"></i>
                        <i class="fa fa-bolt bolt"></i>
                        <i class="fa fa-bolt bolt"></i>
                    </div>
                </div>
            </td>
            <td  class="col3" rowspan="2">
                <button>Bearbeiten</button>
            </td>
        </tr>
        <tr class="col1">
            <td>
                <div>
                    <input id="finCheck" onchange="setFinished({{id}})" type="checkbox" value="{{done}}">
                    <div>Abgeschlossen</div>
                </div>
            </td>
            <td class="col2">
                <textarea>{{content}}</textarea>
            </td>
        </tr>
</table>